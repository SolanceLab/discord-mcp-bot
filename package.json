{
  "name": "discord-mcp-bot",
  "version": "2.0.0",
  "description": "Discord bot template with MCP (Model Context Protocol) integration for Claude Desktop/Code",
  "author": "House of Solance",
  "license": "AGPL-3.0",
  "repository": "https://github.com/SolanceLab/discord-mcp-bot",
  "main": "dist/mcp-server.js",
  "type": "module",
  "bin": {
    "discord-mcp-bot": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/mcp-server.js",
    "start:cloud": "npm run build && node dist/cloud-server.js",
    "start:old": "npm run build && node dist/index.js",
    "dev": "tsx watch src/mcp-server.ts",
    "dev:cloud": "tsx watch src/cloud-server.ts",
    "dev:old": "tsx watch src/index.ts"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "@anthropic-ai/sdk": "^0.27.3",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}
