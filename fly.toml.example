# Example Fly.io configuration — copy to fly.toml and customize
app = "your-discord-bot-app-name"
primary_region = "iad"  # Change to your preferred region

[build]

[http_service]
  internal_port = 3000
  force_https = true
  auto_stop_machines = "off"   # Keep running 24/7 for Discord WebSocket
  auto_start_machines = true
  min_machines_running = 1     # Always have one instance
  max_machines_running = 1     # Only ONE — prevents duplicate Discord connections

[[vm]]
  size = "shared-cpu-1x"
  memory = "256mb"
